<h2>Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'col s12 m12 l12 lx12'}) do |f| %>
    <div class="row">
      <div class="input-field col s12 m12 l12 xl12">
        <i class="material-icons prefix">perm_identity</i>
        <%= f.email_field :email, autofocus: true, class: 'validate', placeholder: 'Email' %>
        <%= f.label :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m12 l12 xl12">
        <i class="material-icons prefix">lock</i>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: 'validate', placeholder: 'Password' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'waves-effect waves-light btn' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
